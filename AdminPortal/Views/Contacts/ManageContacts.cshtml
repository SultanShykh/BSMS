@model List<AdminPortal.Models.ContactsModel>
@section style{
    <style>
        .select2 {
            width: 100%
        }
    </style>
}
<div class="container-fluid border-radius-lg">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-body">
                    <a class="btn bg-gradient-dark m-0" href="/Contacts/Download/@ViewBag.PageNumber" id="add">Download</a>
                    <button class="btn bg-gradient-dark m-0 add" data-toggle="modal" data-target="#ModalAdd">Add Contact</button>
                    <button class="btn bg-gradient-dark m-0">Import</button>
                    <form id="form" method="post" action="/Menu/Index/@ViewBag.pageNumber" class="mt-2">
                        <div class="row">
                            <div class="col-md-4">
                                <input type="Email" name="menu_name" class="form-control" placeholder="Enter Email" value="" />
                            </div>
                            <div class="col-md-4">
                                <input type="text" name="menu_url" class="form-control" placeholder="F" value="" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn bg-gradient-dark sender-button" id="fetch">Search</button>
                            </div>
                        </div>
                    </form>
                    <div class="table-responsive">
                        <table class="table table-sm table-bordered table-striped" id="MainTable">
                            <thead class="bg-gradient-dark text-white">
                                <tr>
                                    <td>Id</td>
                                    <td hidden>User Id</td>
                                    <td>Full Name</td>
                                    <td>Numbers</td>
                                    <td>Email</td>
                                    <td>Group Name</td>
                                    <td>Option 1</td>
                                    <td>Option 2</td>
                                    <td>Option 3</td>
                                    <td hidden>Group Id</td>
                                    <td hidden>ugc_id</td>
                                    <td>Action</td>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    if (Model.Count > 0)
                                    {
                                        foreach (var v in Model)
                                        {
                                            <tr>
                                                <td>@v.id</td>
                                                <td hidden>@v.user_id</td>
                                                <td>@v.fullname</td>
                                                <td>@v.numbers</td>
                                                <td>@v.emails</td>
                                                <td>@v.groupname</td>
                                                <td>@v.option1</td>
                                                <td>@v.option2</td>
                                                <td>@v.option3</td>
                                                <td hidden>@v.groupid</td>
                                                <td hidden>@v.ugc_id</td>
                                                <td>
                                                    <button class="border-0 text-dark edit" title="Edit" data-toggle="modal" data-target="#ModalUpdate"><i class="fas fa-edit"></i></button>
                                                    <button class="border-0 text-dark assign" title="Group Assign" data-toggle="modal" data-target="#ModelAddAssign"><i class="fa fa-plus-square-o"></i></button>
                                                    <button class="border-0 text-dark delete" title="Delete"><i class="fa fa-trash-o"></i></button>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr><td colspan="9" class="text-center">No records found</td></tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <nav aria-label="Page navigation example align-middle">
                        <ul class="pagination">
                            @if (ViewBag.PageNumber > 1)
                            {
                                <li class="page-item text-white"><a class="page-link bg-gradient-dark text-white" href="1">1</a></li>
                                <li class="page-item text-white">
                                    <a class="page-link bg-gradient-dark text-white" href="@((int)ViewBag.PageNumber - 1)" aria-label="Previous">
                                        <i class="fa fa-angle-left"></i>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                </li>
                            }

                            <li class="m-2 border-radius-md bg-light"><strong>&nbsp;&nbsp;&nbsp;@ViewBag.PageNumber&nbsp;&nbsp;&nbsp;</strong></li>

                            @if (ViewBag.PageNumber < ViewBag.totalPages)
                            {
                                <!--Next Page-->
                                <li class="page-item text-white">
                                    <a class="page-link bg-gradient-dark text-white" href="" aria-label="Next">
                                        <i class="fa fa-angle-right"></i>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </li>
                                <li class="page-item text-white"><a class="page-link bg-gradient-dark text-white" href="@((int)ViewBag.PageNumber - 1)">@ViewBag.totalPages</a></li>
                            }
                            else
                            {

                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal -->
@{
    Html.RenderAction("_UpdateContact", "Contacts");
}
@{
    Html.RenderAction("_AddContact", "Contacts");
}
@{
    Html.RenderAction("_AssignMultipleGroup", "Contacts");
}

<script src="~/Scripts/ProjectScript/CrudScript.js"></script>
<script src="~/Scripts/ProjectScript/CommonMethods.js"></script>
<script>
    $(document).ready(function () {
        $('#MainTable').DataTable({
            paging: false,
            searching: false,
            ordering: false,
            info: false,
        });
    });
    var formAdd = $('#formAddContact');
    var formUpdate = $('#formUpdateContact');
    var formAssignAddGroup = $('#formAssignAddGroup');
    $('.edit').click(function () {
        resetValidation();
        var table = $('#MainTable').DataTable();
        var data = table.row($(this).closest('tr')).data();

        $('#id').val(data[0]);
        $('#user_id').val(data[1]);
        $('#fullname').val(data[2]);
        $('#numbers').val(data[3]);
        $('#emails').val(data[4]);
        $('#option1').val(data[6]);
        $('#option2').val(data[7]);
        $('#option3').val(data[8]);
        $('.groupname1').val(data[9]);
        $('.groupname1').select2();
        $('#ugc_id').val(data[10]);
    });
    $('.add').click(function () {
        $('.groupname').select2();
    });
    $('.assign').click(function () {
        debugger
        resetValidation();
        $('.groupname3').val('');
        $('.groupname3').select2({
            placeholder: "Select Multiple",
        });
        formAssignAddGroup.trigger('reset');
        var table = $('#MainTable').DataTable();
        var data = table.row($(this).closest('tr')).data();
        $('#contact_id').val(data[0]);
    });
    $('.delete').click(function () {
        var table = $('#MainTable').DataTable();
        var table_data = table.row($(this).closest('tr')).data();
        DeleteConfirmGET('/Contacts/DeleteContact', table_data[10]);
    });
    formAdd.submit(function (e) {
        e.preventDefault();
        if (formAdd.valid()) {
            CrudScript.makeAjaxRequest('Post', '/Contacts/_AddContact', formAdd.serialize()).then(function (data) {
                if (data.status == true) {
                    ShowDivSuccess(data.message);
                }
                else {
                    ShowDivError(data.message);
                }
            });
        }
        else {
            ShowDivError("Input data is not valid");
        }
    });
    formUpdate.submit(function (e) {
        e.preventDefault();
        if (formUpdate.valid()) {
            CrudScript.makeAjaxRequest('Post', '/Contacts/_UpdateContact', formUpdate.serialize()).then(function (data) {
                if (data.status == true) {
                    ShowDivSuccess(data.message);
                }
                else {
                    ShowDivError(data.message);
                }
            });
        }
        else {
            ShowDivError("Input data is not valid");
        }
    });
    formAssignAddGroup.submit(function (e) {
        debugger
        var groupname = "";
        $.each($('#groupname3').val(), function (key, val) {
            groupname += val + ",";
        });
        var obj = {};
        obj.id = $('#contact_id').val();
        obj.groupname = groupname;
        e.preventDefault();
        if (formAdd.valid()) {
            CrudScript.makeAjaxRequest('Post', '/Contacts/_AssignMultipleGroup', obj).then(function (data) {
                if (data.status == 'true') {
                    ShowDivSuccess(data.message);
                }
                else {
                    ShowDivError(data.message);
                }
            });
        }
        else {
            ShowDivError("Input data is not valid");
        }
    });
</script>