@model Tuple<List<dynamic>, List<dynamic>>
<div class="container-fluid border-radius-lg">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-header">
                    <p class="card-title">Manage Campaigns</p>
                </div>
            </div>
        </div>
    </div>
@{ foreach (var v in Model.Item1)
    {
    <div class="row my-4">
        <div class="col-xl-3 col-sm-6">
                <div class="card shadow">
                    <div class="card-body p-3">
                        <div class="row">
                            <div class="col-8">
                                <div class="numbers">
                                    <p class="mb-0 text-capitalize font-weight-bold mb-2">Today</p>
                                    <p class="text-sm">
                                        @v.Today
                                    </p>
                                </div>
                            </div>
                            <div class="col-4 text-end">
                                <div class="icon icon-shape bg-gradient-dark shadow text-center border-radius-md">
                                    <i class="ni ni-money-coins text-lg opacity-10" aria-hidden="true"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
        <div class="col-xl-3 col-sm-6">
            <div class="card shadow">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class=" mb-0 text-capitalize font-weight-bold mb-2">This Week</p>
                                <p class="text-sm">
                                    @v.ThisWeek
                                </p>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-dark shadow text-center border-radius-md">
                                <i class="ni ni-world text-lg opacity-10" aria-hidden="true"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-12">
            <div class="card shadow">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class=" mb-0 text-capitalize font-weight-bold mb-2">This Month</p>
                                <p class="text-sm">
                                    @v.ThisMonth
                                </p>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-dark shadow text-center border-radius-md">
                                <i class="ni ni-paper-diploma text-lg opacity-10" aria-hidden="true"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-12">
            <div class="card shadow">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="mb-0 text-capitalize font-weight-bold mb-2">This Year</p>
                                <p class="text-sm">
                                    @v.ThisYear
                                </p>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-dark shadow text-center border-radius-md">
                                <i class="ni ni-paper-diploma text-lg opacity-10" aria-hidden="true"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    }
}

    <div class="row">
        <div class="card shadow">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover table-sm table-bordered text-sm table-striped"  id="table">
                        <thead class="bg-gradient-dark text-white">
                            <tr>
                                <td>Id</td>
                                <td>User <br /> Name</td>
                                <td>Campaign <br /> Name</td>
                                <td>Sender</td>
                                <td>Start <br /> Date</td>
                                <td>End <br /> Date</td>
                                <td>Total <br /> SMS</td>
                                <td>Sent <br />SMS</td>
                                <td>Remaining <br /> SMS</td>
                                <td>Status</td>
                                <td>Priority</td>
                                <td>Action</td>
                            </tr>
                        </thead>
                        <tbody>
                        @{
                            foreach (var v in Model.Item2)
                            {
                                <tr>
                                    <td>@v.id</td>
                                    <td>@v.username</td>
                                    <td>@v.camp_name</td>
                                    <td>@v.masking</td>
                                    <td>@v.camp_time</td>
                                    <td>@v.camp_end_time</td>
                                    <td>@v.total_sms</td>
                                    <td>@v.sent_sms</td>
                                    <td></td>
                                    <td>@v.status</td>
                                    <td>@v.sent_sms</td>
                                    <td><button class="btn bg-gradient-dark btn-sm"><i class="fa fa-circle-pause"></i></button></td>
                                </tr>
                            }
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
    {
    <script>
        $(document).ready(function (){
            $('#table').DataTable({
            //    paging: false,
            //    searching: false,
                ordering: false
             //  info: false,
            });
        });
    </script>
    }